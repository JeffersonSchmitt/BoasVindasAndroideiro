<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeffersonschmitt.boasvindasandroideiro.MainActivity">


  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/android_jornada"
  android:scaleType="centerCrop"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/bemvindo"
      android:layout_centerHorizontal="true"
      android:textSize="@dimen/padrao_texto"
      android:fontFamily="@string/padrao_fonte"
      android:textColor="@android:color/black"
      android:padding="@dimen/padrao_padding"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/bora_programar"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:textSize="@dimen/padrao_texto"
      android:fontFamily="@string/padrao_fonte"
      android:textColor="@android:color/white"
      android:padding="@dimen/padrao_padding"
  />


</RelativeLayout>
